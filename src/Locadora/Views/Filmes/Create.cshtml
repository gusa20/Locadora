@model Locadora.Models.Filme

@{
    ViewData["Title"] = "Novo Filme";
}

<h2>Cadastrar filme</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Filme</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DataEstreia" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>Data de Estreia</label>
                <input asp-for="DataEstreia" class="form-control" type="date"/>
                <span asp-validation-for="DataEstreia" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DiretorId" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>ID Diretor</label>
                <select asp-for="DiretorId" class ="form-control" asp-items="ViewBag.DiretorId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EstudioId" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>ID Est&uacute;dio</label>
                <select asp-for="EstudioId" class ="form-control" asp-items="ViewBag.EstudioId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumPremios" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>Pr&ecirc;mios</label>
                <input asp-for="NumPremios" class="form-control" />
                <span asp-validation-for="NumPremios" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TwoLetterISOLanguageName" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>Idioma (ISO)</label>
                <input asp-for="TwoLetterISOLanguageName" class="form-control" />
                <span asp-validation-for="TwoLetterISOLanguageName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="_genero" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>G&ecirc;nero</label>
                <select asp-for="_genero" class="form-control" asp-items="Html.GetEnumSelectList<Locadora.Models.Filme.Genero>()"></select>
                <span asp-validation-for="_genero" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
