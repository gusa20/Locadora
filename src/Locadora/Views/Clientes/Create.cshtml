@model Locadora.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h2>Cadastrar Cliente</h2>

<form asp-action="Create"> 
    <div class="form-horizontal">
        <h4>Cliente</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CPF" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>CPF</label>
                <input required asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataAdesao" class="col-md-2 control-label hidden"></label>
            <div class="col-md-10">
                <label>Data de Ades&atilde;o</label>
                <input required asp-for="DataAdesao" class="form-control" type="date"/>
                <span asp-validation-for="DataAdesao" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="hidden col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="_statusCliente" class="hidden col-md-2 control-label"></label>
            <div class="hidden col-md-10">
                <label>Status do Cliente</label>
                <select asp-for="_statusCliente" class="form-control"></select>
                <span asp-validation-for="_statusCliente" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
